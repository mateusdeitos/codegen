{
	"compilerOptions": {
		"module": "commonjs",
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"target": "es6",
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "lib/dist",
		"baseUrl": ".",
		"esModuleInterop": true,
		"declaration": true,
		"strict": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
	},
	"include": [
		"lib/src/**/*"
	]
}
